<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentStudentProfileRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context="bestpractices.keyoutcomestracker.activities.ActivityMain">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/gridLayout0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gridLayout1"
                android:layout_margin="8dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gridLayout0"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_corners_cards"
                    android:columnCount="4">

                    <TextView
                        android:layout_column="0"
                        android:layout_margin="4dp"
                        android:layout_row="0"
                        android:text="Course Fields"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/courseIDTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_margin="10dp"
                        android:layout_row="1"
                        android:hint="Course ID"
                        android:longClickable="false">

                        <EditText
                            android:id="@+id/courseIDEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:longClickable="false"
                            android:maxLength="40"
                            android:maxLines="1" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/courseNameTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_columnSpan="4"
                        android:layout_margin="10dp"
                        android:layout_row="2"
                        android:hint="Course Name"
                        android:longClickable="false">

                        <EditText
                            android:id="@+id/courseNameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_row="1"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:longClickable="false"
                            android:maxLength="40"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/courseDescriptionTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_columnSpan="4"
                        android:layout_margin="10dp"
                        android:layout_row="3"
                        android:hint="Course Description"
                        android:longClickable="false">

                        <EditText
                            android:id="@+id/courseDescriptionEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_row="3"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:longClickable="false"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/courseRoomNumberTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_columnSpan="4"
                        android:layout_margin="10dp"
                        android:layout_row="4"
                        android:hint="Course Room Number"
                        android:longClickable="false">

                        <EditText
                            android:id="@+id/courseRoomNumberEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_row="4"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:longClickable="false"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/courseInstructorInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_columnSpan="4"
                        android:layout_margin="10dp"
                        android:layout_row="5"
                        android:hint="Course Instructor"
                        android:longClickable="false">

                        <EditText
                            android:id="@+id/courseInstructorEmailEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_row="5"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:longClickable="false"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/courseTATextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_columnSpan="4"
                        android:layout_margin="10dp"
                        android:layout_row="6"
                        android:hint="Course TA"
                        android:longClickable="false">

                        <EditText
                            android:id="@+id/courseTAEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_row="6"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:longClickable="false"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/semesterStartDateTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_columnSpan="4"
                        android:layout_margin="10dp"
                        android:layout_row="7"
                        android:hint="Semester Start Date"
                        android:longClickable="false">

                        <EditText
                            android:id="@+id/semesterStartDateEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_row="7"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:longClickable="false"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>


                    <Button
                        android:id="@+id/semesterStartDateButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_row="8"
                        android:background="@drawable/ripple_effect"
                        android:text="Tap to Select Semester Start Date"
                        android:textColor="#FFFFFF" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/semesterEndDateTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_columnSpan="4"
                        android:layout_margin="10dp"
                        android:layout_row="9"
                        android:hint="Semester End Date"
                        android:longClickable="false">

                        <EditText
                            android:id="@+id/semesterEndDateEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_row="9"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:longClickable="false"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/semesterEndDateButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_row="11"
                        android:background="@drawable/ripple_effect"
                        android:text="Tap to Select Semester End Date"
                        android:textColor="#FFFFFF" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/selectClassDaysTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_columnSpan="4"
                        android:layout_margin="10dp"
                        android:layout_row="12"
                        android:hint="Select Class Days"
                        android:longClickable="false">

                        <EditText
                            android:id="@+id/selectClassDaysEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_row="10"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:longClickable="false"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/selectLectureStartTimeTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_columnSpan="4"
                        android:layout_margin="10dp"
                        android:layout_row="13"
                        android:hint="Lecture Start Time"
                        android:longClickable="false">

                        <EditText
                            android:id="@+id/selectLectureStartTimeEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_row="10"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:longClickable="false"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/lectureStartTimeButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_row="14"
                        android:background="@drawable/ripple_effect"
                        android:text="Tap to Select Lecture Start Time"
                        android:textColor="#FFFFFF" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/selectLectureEndTimeTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_columnSpan="4"
                        android:layout_margin="10dp"
                        android:layout_row="15"
                        android:hint="Lecture Start Time"
                        android:longClickable="false">

                        <EditText
                            android:id="@+id/selectLectureEndTimeEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_row="10"
                            android:imeOptions="actionDone"
                            android:inputType="textCapWords"
                            android:longClickable="false"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/lectureEndTimeButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_row="16"
                        android:background="@drawable/ripple_effect"
                        android:text="Tap to Select Lecture End Time"
                        android:textColor="#FFFFFF" />


                </GridLayout>
            </android.support.v7.widget.CardView>


        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/saveCourseInformationFAB"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:elevation="6dp"
        android:src="@drawable/ic_check_white_24dp" />
</RelativeLayout>