<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bestpractices.keyoutcomestracker.activities.ActivityMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Best Practices To Graduate empowers college students to attend classes and complete study sessions through five best practices so they can graduate."
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info1"
                android:layout_marginTop="16dp"
                android:text="This Key Outcomes Tracker Tool provides immediate feedback on attending classes and completing study sessions. By entering your basic course information and simply checking off your attendance and study progress on a daily basis, you will develop a living document that shows your likelihood of successfully graduating from college."
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/bulletPoint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info2"
                android:layout_marginTop="15dp"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:text="@string/bullet_point"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info2"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/bulletPoint1"
                android:layout_toRightOf="@id/bulletPoint1"
                android:text="The Key Outcomes Tracker provides a running summary of your attendance in each class as your studentSemester progresses. Less than 75% attendance indicates a high risk of jeopardizing a passing grade."
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/bulletPoint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info3"
                android:layout_marginTop="15dp"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:text="@string/bullet_point"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info3"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/bulletPoint2"
                android:layout_toRightOf="@id/bulletPoint2"
                android:gravity="fill_horizontal"
                android:text="This tool will also help you track your completion of planned 'weekly' study sessions. Completing less than 80% of your study sessions places you at risk in not earning course credit."
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bulletPoint3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info4"
                android:layout_marginTop="15dp"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:text="@string/bullet_point"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info4"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/bulletPoint3"
                android:layout_toRightOf="@id/bulletPoint3"
                android:gravity="fill_horizontal"
                android:text="Finally, this tool will help you track your class activities and corresponding due dates.  Such as homework assignments, quizzes, tests, etc."
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info12"
                android:layout_marginTop="16dp"
                android:gravity="fill_horizontal"
                android:text="As your studentSemester progresses, this tracking tool can provide you a reality check on your true progress before it's too late to make a positive change."
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/about2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info5"
                android:layout_marginTop="16dp"
                android:text="On behalf of Best Practices To Graduate, this Tool was developed by the following Student Developers at University of Illinois at Chicago: "
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/student1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about2"
                android:layout_marginTop="15dp"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:text="1. Peeyush Pandey"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/student2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/student1"
                android:layout_marginTop="10dp"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:text="2. Priyanka Prakash"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/student3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/student2"
                android:layout_marginTop="10dp"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:text="3. Shashidhara Shambhu"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/student4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/student3"
                android:layout_marginTop="10dp"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:text="4. Kashyap Parekh"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/student5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/student4"
                android:layout_marginTop="10dp"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:text="5. Sriaditya Medicherla"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/websiteLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/student5"
                android:layout_marginTop="44dp"
                android:autoLink="web"
                android:gravity="center"
                android:text="http://bestpracticestograduate.org/"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider1"
                style="@style/Divider"
                android:layout_below="@+id/websiteLink"
                android:layout_margin="16dp"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/instructorPic" />

            <TextView
                android:id="@+id/deviceModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider1"
                android:gravity="center_horizontal"
                android:text="Device"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/androidVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deviceModel"
                android:gravity="center_horizontal"
                android:text="Android Version"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/appVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/androidVersion"
                android:gravity="center_horizontal"
                android:text="App Version: 1.0.0"
                android:textSize="10sp" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
