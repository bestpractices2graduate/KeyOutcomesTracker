<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/teachingAssistantPic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_face_blue_24dp" />

                <TextView
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="14dp"
                    android:id="@+id/teachingAssistantFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/teachingAssistantPic"
                    android:text="fN" />

                <TextView
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/teachingAssistantLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/teachingAssistantFirstName"
                    android:text="lN" />

                <TextView

                    android:layout_marginLeft="14dp"
                    android:id="@+id/teachingAssistantNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/teachingAssistantFirstName"
                    android:layout_toRightOf="@+id/teachingAssistantPic"
                    android:text="Teaching Assistant" />

                <View
                    android:layout_marginLeft="14dp"
                    android:id="@+id/divider1"
                    style="@style/Divider"
                    android:layout_below="@+id/teachingAssistantNameLabel"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"

                    android:layout_toRightOf="@+id/teachingAssistantPic" />


                <ImageButton
                    android:id="@+id/teachingAssistantPhoneButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider1"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_call_black_24dp" />

                <TextView
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="14dp"
                    android:id="@+id/teachingAssistantPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider1"
                    android:layout_toRightOf="@+id/teachingAssistantPhoneButton"
                    android:text="Phone Number" />

                <TextView
                    android:layout_marginLeft="14dp"
                    android:id="@+id/teachingAssistantPhoneLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/teachingAssistantPhoneNumber"
                    android:layout_toRightOf="@+id/teachingAssistantPhoneButton"
                    android:text="Work" />

                <View
                    android:layout_marginLeft="14dp"
                    android:id="@+id/divider2"
                    style="@style/Divider"
                    android:layout_below="@+id/teachingAssistantPhoneLabel"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/teachingAssistantPhoneButton" />


                <ImageButton
                    android:id="@+id/teachingAssistantEmailButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider2"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_email_black_24dp" />


                <TextView
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="14dp"
                    android:id="@+id/teachingAssistantEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider2"
                    android:layout_toRightOf="@+id/teachingAssistantEmailButton"
                    android:text="Email Address" />

                <TextView
                    android:layout_marginLeft="14dp"
                    android:id="@+id/teachingAssistantEmailLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/teachingAssistantEmailAddress"
                    android:layout_toRightOf="@+id/teachingAssistantEmailButton"
                    android:text="Work" />

                <View
                    android:layout_marginLeft="14dp"
                    android:id="@+id/divider3"
                    style="@style/Divider"
                    android:layout_below="@+id/teachingAssistantEmailLabel"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/teachingAssistantEmailButton" />


                <ImageButton
                    android:id="@+id/teachingAssistantLocationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider3"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_location_marker_black_24dp" />

                <TextView
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="14dp"
                    android:id="@+id/teachingAssistantOfficeNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider3"
                    android:layout_toRightOf="@+id/teachingAssistantLocationButton"
                    android:text="officeNumber" />

                <TextView
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="14dp"
                    android:id="@+id/teachingAssistantOfficeBuilding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/teachingAssistantOfficeNumber"
                    android:layout_toRightOf="@+id/teachingAssistantLocationButton"
                    android:text="officeBuilding" />

                <TextView
                    android:layout_marginLeft="14dp"
                    android:id="@+id/teachingAssistantOfficeBuildingLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/teachingAssistantOfficeBuilding"
                    android:layout_toRightOf="@+id/teachingAssistantLocationButton"
                    android:text="Work" />


            </RelativeLayout>


            <ImageButton
                android:layout_marginTop="12dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_more_vert_black_24dp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>