<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentStudentProfileRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F89"
    tools:context="bestpractices.keyoutcomestracker.activities.ActivityMain">


    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/rounded_corners_cards"
        android:columnCount="4">


        <ImageView
            android:contentDescription="Student Profile Picture"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="0"

            android:background="@color/colorPrimary" />

        <TextView
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="1"
            android:layout_columnSpan="2"
            android:textSize="20sp"
            android:text="Name" />

        <TextView
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_row="1"
            android:layout_columnSpan="2"
            android:textSize="20sp"
            android:text="Created" />

        <TextView
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="2"
            android:textSize="20sp"
            android:layout_columnSpan="2"
            android:text="School" />

        <TextView
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_row="2"
            android:textSize="20sp"
            android:layout_columnSpan="2"
            android:text="Semester" />

        <TextView
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="3"
            android:layout_columnSpan="2"
            android:textSize="20sp"
            android:text="Student ID" />

        <TextView
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_row="3"
            android:layout_columnSpan="2"
            android:textSize="20sp"
            android:text="Classes" />











    </GridLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addStudentProfileFAB"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_person_add_white_24dp" />

</RelativeLayout>